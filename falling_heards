import turtle
import time

screen = turtle.Screen()
screen.bgcolor("black")
screen.title("Welcome Banner")

pen = turtle.Turtle()
pen.color("cyan")
pen.hideturtle()
pen.penup()
pen.goto(0, 0)

texts = ["Hello!", "I am Python Developer", "❤️ Code is Life ❤️"]

for text in texts:
    pen.clear()
    pen.write(text, align="center", font=("Courier", 30, "bold"))
    time.sleep(2)

screen.bye()
